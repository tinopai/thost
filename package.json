{
  "name": "thost",
  "version": "1.0.0",
  "description": "Yet another ShareX image hosting open-source website",
  "main": "build/main.js",
  "scripts": {
    "start":        "tsc && node build/main.js",
    "build:css":    "postcss tailwind.css -o views/assets/tailwind.css",
    "dev":          "./node_modules/nodemon/bin/nodemon.js -e ts --exec \"npm run start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinopai/thost.git"
  },
  "keywords": [
    "image",
    "hosting",
    "sharex",
    "typescript"
  ],
  "author": "Tino Pai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinopai/thost/issues"
  },
  "homepage": "https://github.com/tinopai/thost#readme",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@types/express": "^4.17.11",
    "autoprefixer": "^10.2.1",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "express": "^4.17.1",
    "http": "^0.0.1-security",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.4",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-ejs": "^0.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "postcss-cli": "^8.3.1",
    "typescript": "^4.1.3"
  }
}
